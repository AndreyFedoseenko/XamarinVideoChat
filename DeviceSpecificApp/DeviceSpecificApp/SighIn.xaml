<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeviceSpecificApp.SighIn">
    <StackLayout Orientation="Vertical">
        <Label>Enter your email: </Label>
        <Entry x:Name="emailEntry" Placeholder="Enter your email!"/>
        <Label>Enter your password:</Label>
        <Entry x:Name="passwordEntry" Placeholder="Enter your password!" IsPassword="True"/>
        <Button x:Name="RegisterButton" Text="Register" Clicked="RegisterButton_Clicked"/>
    </StackLayout>
</ContentPage>