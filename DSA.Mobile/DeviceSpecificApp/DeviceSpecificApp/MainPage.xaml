<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DeviceSpecificApp"
             xmlns:controls="clr-namespace:DeviceSpecificApp.Controls;assembly=DeviceSpecificApp"
             x:Class="DeviceSpecificApp.MainPage">
    <StackLayout Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Entry Grid.Column="0" x:Name="ChatCreationEntry" Placeholder="Enter chat name" WidthRequest="200"/>
            <Button Grid.Column="1" Clicked="CreateChat" Text="Create"/>
        </Grid>
        <ListView x:Name="ChatList">
        </ListView>
    </StackLayout>

</ContentPage>